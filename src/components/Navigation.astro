---
const activePage = Astro.url.pathname.slice(1);
---

<style>
    nav {
        display: flex;
        justify-content: space-between;
        padding: 0 2rem;
        background-color: var(--secondary-bg);
    }

    ul {
        display: flex;
        gap: 1.5rem;
        list-style: none;
        justify-content: center;
        align-items: center;
        padding: 0;
    }

    a {
        font-weight: bold;
        color: var(--accent);
    }

    a:visited {
        color: var(--accent);
    }

    a.active {
        text-decoration: none;
        color: #BBB !important;
    }

    @media screen and (max-width: 480px) {
        nav {
            padding: 0 1rem;
        }

        ul {
            gap: 0.75rem;
        }
    }
</style>

<nav>
    <h3>Jawad Ahmed</h3>
    <ul>
        {activePage === "" ?
            <li><a class="active" href="/">Home</a></li>
            <li><a href="/about">About Me</a></li>
        : activePage === "about" ?
            <li><a href="/">Home</a></li>
            <li><a class="active" href="/about">About Me</a></li>
        :
            <li><a href="/">Home</a></li>
            <li><a href="/about">About Me</a></li>
        }
        </li>
    </ul>
</nav>
